NAME = animal

CC = c++

CFLAGS = -Wall -Werror -Wextra -Iincludes -std=c++98

SRC := src/Animal.cpp \
		src/Cat.cpp \
		src/Dog.cpp \
		main.cpp

OBJ := $(SRC:.cpp=.o)

all: $(NAME)

$(NAME):$(OBJ)
		$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@
	
clean:
		rm -f $(OBJ)

fclean: clean
		rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re